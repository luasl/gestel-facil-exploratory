<%= simple_form_for [@contract, @term] do |f| %>
  <%= f.input :number, label: 'Número do aditivo', placeholder: '012021' %>
  <%= f.input :description, label: 'Objeto contratual', placeholder: 'Telefonia' %>
  <%= f.input :date_start, label: 'Inicio da vigencia', placeholder: 'Companhia telefônica Ltda' %>
  <%= f.input :date_end, label: 'Fim de vigencia', placeholder: '00000000000000' %>
  <%= f.button :submit, "Adicionar Termo Aditivo", class: "btn-primary" %>
  <%= button_tag type: 'submit', class: "button-postfix" do %>
  <i class="fas fa-file-signature"></i>
  <% end %>
<% end %>
