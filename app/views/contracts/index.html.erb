<div class="container-md mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <h5 class="text-left"><strong><%= "Todos os contratos" %></strong></h5>
      <div class="card-body">
        <table class="table table-hover">
            <tr>
              <th class="">Nº</th>
              <th class="">Objeto</th>
              <th class="">Contratada</th>
            </tr>
            <% @contracts.each do |contract| %>
              <tr>
                <td class=""><%= link_to "Nº #{contract.number}", contract_path(contract)  %></td>
                <td class=""><%= contract.object  %></td>
                <td class=""><%= contract.company  %></td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
  <div class="container-md">
    <div class="row justify-content-end">
      <div class="col-sm-4">
      <div class="btn btn-info">
          <%= link_to 'Novo contrato', new_contract_path %>
      </div>
      </div>
    </div>
  </div>
</div>
